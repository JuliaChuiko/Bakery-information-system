        <form action="/Seller/FindAllergicIngredient" method="get" class="decor">
            <div>
                <select style="color: darkslategrey" class="selectpicker" data-val-required="* Поле является обязательным" data-style="btn-danger" name="ProductName">
                    <option value="hide">--Изделия----</option>
                    @foreach (var item in Model)
                    {

                        <option value=@item.ProductName>@item.ProductName</option>

                    }
                </select>
            </div>
            <div>
                <input align="center" type="submit" class="btn btn-secondary" value="Поиск" />
            </div>


        </form>
